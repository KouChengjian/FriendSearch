<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5" >

    <RelativeLayout
            android:id="@+id/Layout_setpassword_username"
            android:layout_width="match_parent"
            android:layout_height="50dp" 
            android:background="#4a5059">

            <EditText
                android:id="@+id/edt_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/Layout_setpassword_background_icon"
                android:layout_toRightOf="@+id/rl_break"
                android:background="@null"
                android:ems="9"
                android:hint="请输入搜索内容..."
                android:textColor="#A8A8A8"
                android:textSize="16sp" 
                android:layout_marginLeft="5dp">

                <requestFocus />
            </EditText>

            <RelativeLayout
                android:id="@+id/Layout_setpassword_background_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="#3a4147" >

                <ImageView
                    android:id="@+id/img_oksearch"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/icon_msg_search"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_break"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="#3a4147" >

                <ImageView
                    android:id="@+id/img_break"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/base_action_bar_back_bg_n" />
            </RelativeLayout>


        </RelativeLayout>
    
    <com.kcj.friendsearch.view.KeywordsFlow
        android:id="@+id/frameLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/Layout_setpassword_username" >

    </com.kcj.friendsearch.view.KeywordsFlow>

</RelativeLayout>