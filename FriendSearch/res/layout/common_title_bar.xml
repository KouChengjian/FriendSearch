<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_title">
    <RelativeLayout 
        android:id="@+id/title_bar"
        android:layout_height="48dp"
        android:layout_width="match_parent">
        <Button 
            android:id="@+id/btn_maintitle_leftimage"
            android:layout_height="48dp"
            android:layout_width="48dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textColor="@color/blue"
            android:textSize="16sp"
            android:background="#F9F9F9"/>
        <Button
            android:id="@+id/btn_maintitle_title"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignRight="@+id/btn_maintitle_leftimage"
            android:layout_alignTop="@+id/common_constact"
            android:background="@drawable/item3" 
            />
        <TextView 
            android:id="@+id/title_txt"
            android:layout_height="40dp"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <Button 
            android:id="@+id/btn_maintitle_rightpop"
            android:layout_height="48dp"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@color/common_title"/>
        
        <LinearLayout
            android:id="@+id/common_constact"
            android:layout_height="wrap_content"
            android:layout_width="150dp"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:background="@drawable/ll_top_bg">
            <Button 
                android:id="@+id/btn_maintitle_centreleft"
                style="@style/top_group"
                android:text="地图"/>
            <Button 
                android:id="@+id/btn_maintitle_centreright"
                style="@style/top_all"
                android:text="搜索"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
